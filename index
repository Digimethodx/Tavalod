    window.addEventListener('DOMContentLoaded', () => {
      const labels=["۲۲ مهر","۲۳ مهر","۲۴ مهر","۲۵ مهر","۲۶ مهر","۲۷ مهر"];
      const sla=[81.3,89.9,70.2,84.3,87.1,88.7];
      const asa=[16.5,13.8,25.0,15.6,14.7,13.9];
      const aht=[70.6,65.0,54.6,70.2,68.5,66.3];

      new Chart(document.getElementById('slaDaily'),{
        type:'line',data:{labels:labels,datasets:[{label:'SLA %',data:sla,borderColor:'#2f80ed',tension:.35,borderWidth:2,pointRadius:3}]},
        options:{plugins:{legend:{display:false}},scales:{y:{beginAtZero:true,max:100}}}
      });

      new Chart(document.getElementById('collectionsDaily'),{
        type:'line',
        data:{labels:labels,datasets:[
          {label:'Answer Rate %',data:[95.8,92.7,94.6,98.7,94.5,96.1],borderColor:'#2f80ed',borderWidth:2,tension:.35,pointRadius:3},
          {label:'ASA (s)',data:[12.6,14.7,17.6,17.5,9.0,11.8],borderColor:'#00b894',borderWidth:2,tension:.35,pointRadius:3}
        ]},
        options:{plugins:{legend:{position:'top'}},scales:{y:{beginAtZero:true}}}
      });

      new Chart(document.getElementById('shiftBars'),{
        type:'bar',
        data:{labels:['۰۸–۱۶','۱۶–۲۴'],datasets:[{label:'میانگین تماس/روز',data:[437,568]},{label:'ASA (s)',data:[14.9,18.6]},{label:'AHT (s)',data:[64.4,67.8]}]},
        options:{responsive:true,plugins:{legend:{position:'top'}},scales:{y:{beginAtZero:true}}}
      });

      new Chart(document.getElementById('ticketsPie'),{
        type:'pie',
        data:{labels:['≤۲ دقیقه','۲–۴','۴–۶','۶–۸','خارج از SLA','سایر'],datasets:[{data:[499,146,52,34,145,90]}]},
        options:{plugins:{legend:{position:'bottom'}}}
      });
    });
